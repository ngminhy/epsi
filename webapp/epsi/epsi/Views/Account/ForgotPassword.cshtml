@model epsi.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
}


<div class="page-content login-page">
    <div class="container">
        <article class="page type-page status-publish hentry">
            <div class="entry-content">
                <div class="phm_row hasteck_row phm_row-fluid">
                    <div class="row-container">
                        <div class="parvez_column parvez_column_container parvez_col-sm-12">
                            <div class="parvez_wrapper">
                                <div class="parvez_text_column parvez_content_element ">
                                    <div class="parvez_wrapper">
                                        <div class="bootexpert">
                                            <div class="customer_login" id="customer_login">
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-6 col-md-offset-3">
                                                        <section id="loginForm">
                                                            @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", role = "form" }))
                                                            {
                                                                <div class="form-fields">
                                                                    <h2><i class="fa fa-lock"></i> Quên mật khẩu</h2>
                                                                    @Html.AntiForgeryToken()
                                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                                    <p class="form-row form-row-wide">
                                                                        @Html.LabelFor(m => m.Email)
                                                                        @Html.TextBoxFor(m => m.Email, new { @class = "input-text" })
                                                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                                    </p>
                                                                    
                                                                </div>
                                                                <div class="form-action">

                                                                    <input type="submit" class="button" name="login" value="Gửi yêu cầu" />
                                                                </div>
                                                            }
                                                        </section>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>
