@model IEnumerable<epsi.Models.Category>
<ul class="mega_dropdown">
    @foreach (var item in Model)
    {
        <li class="col_sub_nav default_dropdown drop_to_right children-menu">
            <a href="/san-pham/@Url.Content(item.PageURL)" class="item_link">
                <span class="link_content">
                    <span class="link_text">@item.Name</span>
                </span>
            </a>
            @{ Html.RenderAction("MenuCategoryChild", "Home", new { parentId = item.CategoryId });}
     
        </li>
    }
</ul>