                                <a class="button cart-toggler" href="#">
                                    <span class="mini-cart-link">
                                        <span class="cart-quantity" id="cart-total-header"></span>
                                        <span class="fa fa-shopping-cart"></span>
                                    </span>
                                </a>
                                <div class="widget_shopping_cart_content">
                                    <div class="mini_cart_content">
                                        <div class="mini_cart_inner">
                                            <div class="mini_cart_arrow"></div>
                                            <ul class="cart_list" id="cart-item">
         
                                            </ul>
                                            <p class="total" id="total-price-footer">Tổng: <span class="amount">0 VNĐ</span></p>
                                            <p class="buttons">
                                                <a class="button checkout wc-forward" href="@Url.Action("Index","ShoppingCart")">Giỏ hàng</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @using Microsoft.AspNet.Identity
                            @if (Request.IsAuthenticated)
                            {
                                <div class="user-area">
                                    <span>
                                        @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="username" })
                                    </span>
                                    <br>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()<a href="javascript:document.getElementById('logoutForm').submit()"><b>Đăng xuất</b></a>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="signup-area">
                                    <a class="button" href="@Url.Action("Register","Account")">Đăng ký</a>
                                    <a class="button" href="@Url.Action("Login","Account")">Đăng nhập</a>
                                </div>
                            }
                         </div>
