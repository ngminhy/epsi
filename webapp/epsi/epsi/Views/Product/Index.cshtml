@model IEnumerable<epsi.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <h1 class="page-title">Sản phẩm</h1>
    <div class="shop_content">
        <div class="container">
            <div class="row">
                <div id="secondary" class="col-xs-12 col-md-3 sidebar-category">
                    @*@{Html.RenderPartial("_sidebarCategory");}*@
                    @{ Html.RenderAction("SidebarCategory", "Product");}
                </div>
                <div id="archive-product" class="col-xs-12 col-md-9">
                    <div class="archive-border shop-sidebar left-sidebar">
                        <div class="toolbar">
                            <div class="view-mode">
                                <a href="#" class="grid  active" title="Grid">
                                    <i class="fa fa-th-large"></i><span>Grid</span>
                                </a>
                                <a href="#" class="list " title="List">
                                    <i class="fa fa-th-list"></i><span>List</span>
                                </a>
                            </div>
                            @if (ViewBag.TotalPage > 1)
                            {
                                <nav class="bootexpert-pagination">
                                    <ul class='page-numbers'>
                                        @if (ViewBag.PageIndex > 1)
                                        {
                                            <li>
                                                <a class='page-numbers' href='@(Request.Url.AbsolutePath)?page=@(ViewBag.PageIndex - 1)'>
                                                    &laquo;
                                                </a>
                                            </li>
                                        }
                                        @for (var i = 1; i <= ViewBag.TotalPage; i++)
                                        {
                                            <li>
                                                
                                                <span  class='@(ViewBag.PageIndex == i ? "page-numbers current" : "page-numbers")'><a href='@(Request.Url.AbsolutePath)?page=@i'>@i</a></span>
                                            </li>
                                        }
                                        @if (ViewBag.PageIndex < ViewBag.TotalPage)
                                        {
                                            <li>
                                                <a class='page-numbers' href='@(Request.Url.AbsolutePath)?page=@(ViewBag.PageIndex + 1)'>
                                                    &raquo;
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                 
                            }
                      
                            <div class="clearfix"></div>
                        </div>
                        <div class="shop-products row grid-view">
                            @foreach (var item in Model)
                            {
                                <div class="item-col col-xs-12 col-sm-4 product">
                                    <div class="product-wrapper">
                                        <div class="list-col4">
                                            <div class="product-image">
                                                <a href="#" title="@item.Name">
                                                    <img src="/ImageBrowser/CropImage?path=@item.MainImage.Replace("~/content/images/","")" class="primary_image" alt="@item.Name" />
                                                </a>
                                                <span class="shadows"></span>
                                                <a href="#" class="detail-link quickview">Chi tiết</a>
                                            </div>
                                        </div>
                                        <div class="list-col8">
                                            <div class="gridview">
                                                <div class="product-name-field">
                                                    <h2 class="product-name">
                                                        <a href="#">@item.Name</a>
                                                    </h2>
                                                    <div class="product-id">
                                                        <a href="#">@item.Code</a>
                                                    </div>
                                                </div>
                                                <div class="price-box">
                                                    <span class="amount">@string.Format("{0:0,0}", item.Price) VNĐ</span>
                                                </div>
                                                <div class="actions clearfix">
                                                    <div class="action-buttons">
                                                        <div class="add-cart">
                                                            <p class="product bootexpert add_to_cart_inline">
                                                                <a href="#" class="button add_to_cart_button">Thêm vào giỏ</a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="listview">
                                                <div class="product-name-field">
                                                    <h2 class="product-name">
                                                        <a href="#">@item.Name</a>
                                                    </h2>
                                                    <div class="product-id">
                                                        <a href="#">@item.Code</a>
                                                    </div>
                                                </div>
                                                <div class="price-box">
                                                    <span class="amount">@string.Format("{0:0,0}", item.Price) VNĐ</span>
                                                </div>
                                                <div class="product-desc">
                                                    <p>
                                                        @item.Description
                                                    </p>
                                                </div>
                                                <div class="actions clearfix">
                                                    <div class="action-buttons">
                                                        <div class="add-cart">
                                                            <p class="product bootexpert add_to_cart_inline">
                                                                <a href="#" class="button add_to_cart_button">Thêm vào giỏ</a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            }
                            
                 
                        </div>
                        <div class="toolbar tb-bottom">
                            <div class="view-mode">
                                <a href="#" class="grid  active" title="Grid">
                                    <i class="fa fa-th-large"></i><span>Grid</span>
                                </a>
                                <a href="#" class="list " title="List">
                                    <i class="fa fa-th-list"></i><span>List</span>
                                </a>
                            </div>
                            @if (ViewBag.TotalPage > 1)
                            {
                                <nav class="bootexpert-pagination">
                                    <ul class='page-numbers'>
                                        @if (ViewBag.PageIndex > 1)
                                        {
                                            <li>
                                                <a class='page-numbers' href='@(Request.Url.AbsolutePath)?page=@(ViewBag.PageIndex - 1)'>
                                                    &laquo;
                                                </a>
                                            </li>
                                        }
                                        @for (var i = 1; i <= ViewBag.TotalPage; i++)
                                        {
                                            <li>

                                                <span class='@(ViewBag.PageIndex == i ? "page-numbers current" : "page-numbers")'><a href='@(Request.Url.AbsolutePath)?page=@i'>@i</a></span>
                                            </li>
                                        }
                                        @if (ViewBag.PageIndex < ViewBag.TotalPage)
                                        {
                                            <li>
                                                <a class='page-numbers' href='@(Request.Url.AbsolutePath)?page=@(ViewBag.PageIndex + 1)'>
                                                    &raquo;
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>

                            }
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

