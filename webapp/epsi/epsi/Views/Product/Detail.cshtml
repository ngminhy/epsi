                            <div class="single-product-image no-slide">
                                <img src="/ImageBrowser/CropImage?path=@Model.MainImage.Replace("~/content/images/","")" class="attachment-shop_single"/>
                            </div> 

                            <div class="summary entry-summary single-product-info">
                                <h2 class="product_title entry-title">@Model.Name</h2>
                                <div class="product-id">
                                    <p>Mã sản phẩm: @Model.Code</p>
                                </div>
                                <div class="short-description">
                                    <p>@Model.Description</p>
                                </div>
                                <div class="price-box">
                                    <p class="price">
                                        <ins><span class="amount">@string.Format("{0:0,0}", Model.Price) VNĐ</span></ins>
                                    </p>
                                </div>
                                <form class="cart" method="post" enctype='multipart/form-data'>
                                    <div class="quantity">
                                        <input type="number" name="quantity" id="inputQty" value="1" title="Qty" class="input-text qty text" size="4" min="1" />
                                    </div>
                                    <button type="submit" class="button add_to_cart_button" data-product-name="@Model.Name" data-product-id="@Model.ProductId" data-product-price="@Model.Price" data-product-img="@Model.MainImage.Replace("~/content/images/","")">Thêm vào giỏ</button>
