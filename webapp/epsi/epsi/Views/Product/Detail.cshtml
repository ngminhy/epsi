                                    </li>
                                    <li rel="tab-addi-info" class="tab">
                                        <a>Thông số kỹ thuật</a>
                                    </li>
                                </ul>
                                <div class="panel active" id="tab-description">
                                    @Model.Content
                                </div>
                                <div class="panel" id="tab-addi-info">
                                    <table class="shop_attributes">
                                        <tbody>
                                            <tr>
